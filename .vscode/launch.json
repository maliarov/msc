    "version": "0.2.0",
    "configurations": [
        {
            "name": "msc-core::jest",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/packages/msc-core",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "--config=./jest.config.js",
                "--runInBand",
                "--coverage=false"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}